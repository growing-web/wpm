{
  "name": "wpm-root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "stub": "pnpm -r run stub",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "dependencies": {
    "@types/node": "^20.2.1"
  },
  "devDependencies": {
    "prettier": "^2.8.8",
    "turbo": "1.9.8"
  },
  "packageManager": "pnpm@8.5.1",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "typescript"
      ]
    }
  }
}
